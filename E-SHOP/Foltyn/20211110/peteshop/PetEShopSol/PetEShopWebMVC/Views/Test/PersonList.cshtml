@model PetEShopWebMVC.Models.PersonListModel

@{
    ViewData["Title"] = "List of persons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>List of persons</h1>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
    </tr>
@foreach (var person in Model.Persons)
{
    <tr>
        <td><a href="/test/load-person/@person.ID">Edit: @person.ID</a></td>
        <td>@person.Name</td>
        <td>@person.Age</td>
    </tr>
}
</table>